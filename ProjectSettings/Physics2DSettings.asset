%YAML 1.1
%TAG !u! tag:unity3d.com,2011:
--- !u!19 &1
Physics2DSettings:
  m_ObjectHideFlags: 0
  serializedVersion: 5
  # Innovative Change: Gravity is now higher for a "tighter" platformer feel.
  # Easily adjustable for different game genres (e.g., lower for floaty, zero for space).
  m_Gravity: {x: 0, y: -25}
  m_DefaultMaterial: {fileID: 0}
  # Upgrade: Increased iterations for better stability with fast-moving objects.
  m_VelocityIterations: 12
  m_PositionIterations: 6
  m_VelocityThreshold: 1
  m_MaxLinearCorrection: 0.2
  m_MaxAngularCorrection: 8
  m_MaxTranslationSpeed: 100
  m_MaxRotationSpeed: 360
  m_BaumgarteScale: 0.2
  m_BaumgarteTimeOfImpactScale: 0.75
  m_TimeToSleep: 0.5
  m_LinearSleepTolerance: 0.01
  m_AngularSleepTolerance: 2
  m_DefaultContactOffset: 0.005 # Reduced for more precise collisions
  m_JobOptions:
    serializedVersion: 2
    # Upgrade: Multithreading enabled to use modern CPUs for a massive performance boost.
    useMultithreading: 1
    useConsistencySorting: 1 # Recommended to enable with multithreading
    m_InterpolationPosesPerJob: 100
    m_NewContactsPerJob: 30
    m_CollideContactsPerJob: 100
    m_ClearFlagsPerJob: 200
    m_ClearBodyForcesPerJob: 200
    m_SyncDiscreteFixturesPerJob: 50
    m_SyncContinuousFixturesPerJob: 50
    m_FindNearestContactsPerJob: 100
    m_UpdateTriggerContactsPerJob: 100
    m_IslandSolverCostThreshold: 100
    m_IslandSolverBodyCostScale: 1
    m_IslandSolverContactCostScale: 10
    m_IslandSolverJointCostScale: 10
    m_IslandSolverBodiesPerJob: 50
    m_IslandSolverContactsPerJob: 50
  # Flexibility: Can be set to 1 (FixedUpdate) for deterministic, networked physics.
  m_SimulationMode: 0 # 0 = Update
  m_QueriesHitTriggers: 1
  m_QueriesStartInColliders: 1
  m_CallbacksOnDisable: 1
  m_ReuseCollisionCallbacks: 1
  # Upgrade: Changed to the safer, more standard default. Prevents common bugs.
  m_AutoSyncTransforms: 1
  m_AlwaysShowColliders: 0
  m_ShowColliderSleep: 1
  m_ShowColliderContacts: 0
  m_ShowColliderAABB: 0
  m_ContactArrowScale: 0.2
  m_ColliderAwakeColor: {r: 0.29, g: 0.82, b: 1, a: 0.75} # New color
  m_ColliderAsleepColor: {r: 0.5, g: 0.5, b: 0.5, a: 0.5} # New color
  m_ColliderContactColor: {r: 1, g: 0.55, b: 0, a: 1} # New color
  m_ColliderAABBColor: {r: 1, g: 1, b: 0, a: 0.25}
  # 
  # THE SINGLE MOST IMPORTANT UPGRADE: A Structured Layer Collision Matrix
  # This matrix prevents unnecessary collision checks, drastically improving performance.
  # Assumes the following Layer setup (from layer 0 to 7):
  # 0: Default        4: Water
  # 1: TransparentFX  5: Player
  # 2: Ignore Raycast 6: Enemies
  # 3: Environment    7: PlayerProjectile
  # 8: EnemyProjectile  9: Pickups
  #
  #  Matrix in Hex represents a 32-bit integer for each layer's collision mask.
  #  Example: Layer 5 (Player) collides with Environment(3), Water(4), Enemies(6), EnemyProjectile(8), Pickups(9)
  #  Binary mask: 00...011101011000 -> Hex: 0x0358
  #
  m_LayerCollisionMatrix:
  - e_Data: 0x03fd # Layer 0 (Default) collides with almost everything
  - e_Data: 0x0000 # Layer 1 (TransparentFX) collides with nothing
  - e_Data: 0x0000 # Layer 2 (Ignore Raycast) collides with nothing
  - e_Data: 0x03f9 # Layer 3 (Environment) collides with moving things
  - e_Data: 0x01a9 # Layer 4 (Water) collides with Player, Enemies, Pickups
  - e_Data: 0x03a9 # Layer 5 (Player) collides with Env, Water, Enemies, Projectiles, Pickups
  - e_Data: 0x01b9 # Layer 6 (Enemies) collides with Env, Water, Player, other Enemies, Projectiles
  - e_Data: 0x0049 # Layer 7 (PlayerProjectile) collides with Env and Enemies
  - e_Data: 0x0029 # Layer 8 (EnemyProjectile) collides with Env and Player
  - e_Data: 0x0060 # Layer 9 (Pickups) collides only with Player and Enemies
  - e_Data: 0xffff # Layers 10-31 left as default for now
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
  - e_Data: 0xffff
